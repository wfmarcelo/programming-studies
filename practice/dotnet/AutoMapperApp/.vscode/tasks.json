{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AutoMapperApp.sln", // Constrói a solução inteira
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/AutoMapperApp.Api/AutoMapperApp.Api.csproj"
            ],
            "problemMatcher": {
                "pattern": "$msCompile",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*dotnet watch .* started\\s*$",
                    "endsPattern": "^\\s*dotnet watch .* exited\\s*$"
                },
                "process": {
                    "exitCodes": [0, 1]
                }
            },
            "isBackground": true,
            "dependsOn": "build",
            "options": {
                "cwd": "${workspaceFolder}/AutoMapperApp.Api"
            }
        }
    ]
}